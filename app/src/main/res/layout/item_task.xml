<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="8dp"
    android:paddingHorizontal="16dp"
    android:layout_marginTop="8dp">

    <!-- בלוק השעות -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_time_block"
        android:paddingStart="12dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvTaskStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:00"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <!-- קו אנכי נקודתי בין התחלה וסיום -->
        <View
            android:layout_width="2dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/black"
            android:alpha="0.2"
            android:layout_marginVertical="4dp" />

        <TextView
            android:id="@+id/tvTaskEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:45"
            android:textSize="14sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- רווח קטן בין בלוקים -->
    <Space
        android:layout_width="8dp"
        android:layout_height="match_parent" />

    <!-- בלוק הפרטים -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/bg_task_block"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <TextView
            android:id="@+id/tvTaskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="כותרת המשימה"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tvTaskNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note:"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

</LinearLayout>
